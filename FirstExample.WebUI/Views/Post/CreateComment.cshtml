@using FirstExample.WebUI.Models
@model CommentCreate
<div class="card">
    <div class="card-body post-main">
        @using (Html.BeginForm("CreateComment","Post", FormMethod.Post, new { @class = "comment-form" }))
        {
                <input hidden name="PostId" value="@(ViewContext.RouteData.Values["id"])"/>
                <div class="form-group">
                    @Html.Label("Write your thoughts here:")
                    @Html.TextAreaFor(m => m.Text, new { @class = "form-control", rows = "5" })
                </div>
                <button class="btn btn-primary">Send</button>
        }
    </div>
</div>