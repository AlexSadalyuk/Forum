@using FirstExample.Core.Entities.Dto
@model PagInfo

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.CurrPage > 1)
            {
                <li class="page-item">
                    @Html.ActionLink((Model.CurrPage-1).ToString(),
                                        Model.Action,
                                        new { page = Model.CurrPage-1, id = Model.RoutId ?? null },
                                        new { @class = "page-link" })
                </li>
            }

            <li class="page-item active">
                @Html.ActionLink(Model.CurrPage.ToString(), "Index", new { page = Model.CurrPage }, new { @class = "page-link" })
            </li>

            @if (Model.CurrPage < Model.TotalPages)
            {
                <li class="page-item">
                    @Html.ActionLink((Model.CurrPage+1).ToString(),
                                        Model.Action,
                                        new { page = Model.CurrPage+1, id = Model.RoutId ?? null },
                                        new { @class = "page-link" })
                </li>
            }

        </ul>
    </nav>
}